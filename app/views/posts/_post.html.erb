<div class="card" style="width: 18rem;">
  <div class="card-body">
    <% if current_user.organizer? && post.is_created_by?(current_user) %>
      <%= link_to "Edit", edit_post_path(post), class: "btn btn-secondary float-right" %>
    <% else %>
      <%= link_to "View", post, class: "btn btn-secondary float-right" %>
    <% end %>
    <%= post.content %>
  </div>
</div>
