<div class="page-header">
  <%= link_to posts_path, class: 'btn btn-default' do %>
    All Posts
  <% end %>
  <%= link_to edit_post_path(@post), class: 'btn btn-primary' do %>
    Edit
  <% end %>
  <h1>Show post</h1>
</div>

<dl class="dl-horizontal">
  <dt>Text:</dt>
  <dd><%= @post.text %></dd>

  <dt>Organization:</dt>
  <dd><%= @post.organization %></dd>

</dl>
