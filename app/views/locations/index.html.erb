


<div class="row">
  <div class="col-sm-6">
    <h1>Locations</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_location_path, class: 'btn btn-primary' do %>
    Add New Location
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    

            <th>Street address</th>
            <th>City</th>
            <th>State</th>
            <th>Organization</th>
            
          <th></th>
        
      </tr>
    </thead>

    <tbody>
      <% @locations.each do |location| %>
        <%= content_tag :tr, id: dom_id(location), class: dom_class(location) do %>
          

                      <td><%= location.street_address %></td>
                      <td><%= location.city %></td>
                      <td><%= location.state %></td>
                      <td><%= location.organization %></td>
          
          
            <td><%= link_to 'Show', location %></td>
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
